<div class="container mt-3">
  <div class="jumbotron">
    <h1>Formulario de Productos</h1>
    <form action="/api/productos/productos" , method="POST">
      <div class="form-group">
        <label for="title">Titulo</label>
        <input
          type="text"
          class="form-control"
          id="title"
          name="title"
          placeholder="Titulo"
        />
      </div>
      <div class="form-group">
        <label for="price">Precio</label>
        <input
          type="text"
          class="form-control"
          id="price"
          name="price"
          placeholder="price"
        />
      </div>
      <div class="form-group">
        <label for="image">Imagen</label>
        <input
          type="text"
          class="form-control"
          id="image"
          name="image"
          placeholder="image"
        />
      </div>
      <div class="form-group">
        <button class="btn btn-primary mt-3">Guardar</button>
        <a
          href="/api/productos/productos"
          type="button"
          class="btn btn-primary mt-3 mx-3"
        >Ver Productos</a>
      </div>
    </form>
  </div>
</div>